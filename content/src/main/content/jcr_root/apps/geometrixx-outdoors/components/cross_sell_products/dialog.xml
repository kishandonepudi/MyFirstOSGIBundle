<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Cross-Sell Product Offer"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <heading
            jcr:primaryType="cq:Widget"
            fieldLabel="Heading"
            name="./heading"
            xtype="textfield"/>
        <message
            jcr:primaryType="cq:Widget"
            fieldDescription="Insert '{1}' for the reference product title and '{2}' for the cross-sell product title."
            fieldLabel="Message"
            name="./message"
            xtype="textfield"/>
        <call-to-action
            jcr:primaryType="cq:Widget"
            fieldLabel="Button Label"
            name="./calltoaction"
            xtype="textfield"/>
        <background-image
            jcr:primaryType="cq:Widget"
            fieldLabel="Background Image"
            name="./backgroundImage"
            rootPath="/content/dam/geometrixx-outdoors"
            xtype="pathfield"/>
    </items>
</jcr:root>
