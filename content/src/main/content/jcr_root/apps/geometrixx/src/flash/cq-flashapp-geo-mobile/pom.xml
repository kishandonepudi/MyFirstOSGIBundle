<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- ======================================================================= -->
    <!-- P A R E N T                                                             -->
    <!-- ======================================================================= -->
    <parent>
        <groupId>com.day.cq.flash</groupId>
        <artifactId>flash-parent</artifactId>
        <version>5.5.0</version>
        <relativePath>../../../../../libs/wcm/flash/src/parent/pom.xml</relativePath>
    </parent>

    <scm>
      <connection>scm:git:git@git.corp.adobe.com:CQ5/cq5.git</connection>
      <developerConnection>scm:git:git@git.corp.adobe.com:CQ5/cq5.git</developerConnection>
      <url>https://git.corp.adobe.com/CQ5/cq5/tree/master/content/jcr_root/apps/geometrixx/src/flash/cq-flashapp-geo-mobile</url>
    </scm>

    <!-- ======================================================================= -->
    <!-- P R O J E C T                                                           -->
    <!-- ======================================================================= -->
    <groupId>com.day.cq.wcm</groupId>
    <artifactId>cq-flashapp-geo-mobile</artifactId>
    <packaging>swf</packaging>
    <name>CQ Composite Flash App - Geometrixx Mobile (Trader)</name>
    <version>5.6.0-SNAPSHOT</version>

    <build>
        <sourceDirectory>src/main/flex</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.sonatype.flexmojos</groupId>
                <artifactId>flexmojos-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <sourceFile>MobileTrader.mxml</sourceFile>
                    <debug>true</debug>
                    <keepAs3Metadatas>
                        <keepAs3Metadata>FlexCqComponent</keepAs3Metadata>
                    </keepAs3Metadatas>
                    <localesCompiled>
                        <compiled>en_US</compiled>
                    </localesCompiled>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <!-- ======================================================================= -->
    <!-- D E P E N D E N C I E S                                                 -->
    <!-- ======================================================================= -->
    <dependencies>
        <dependency>
            <groupId>com.day.cq.wcm</groupId>
            <artifactId>cq-flashapp</artifactId>
            <version>5.5.0</version>
            <type>swc</type>
            <scope>internal</scope>
        </dependency>
        <dependency>
            <groupId>com.adobe.flex</groupId>
            <artifactId>lccs</artifactId>
            <version>10.3.0</version>
            <type>swc</type>
            <scope>internal</scope>
        </dependency>

        <dependency>
            <groupId>com.adobe.flex.framework</groupId>
            <artifactId>playerglobal</artifactId>
            <type>swc</type>
        </dependency>
        <dependency>
            <groupId>com.adobe.flex.framework</groupId>
            <artifactId>flex-framework</artifactId>
            <type>pom</type>
        </dependency>
    </dependencies>
</project>
